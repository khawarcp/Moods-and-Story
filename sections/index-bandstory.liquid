<section class="brand-story" id="scroll-down">
  <div class="moods-story-logo">
    <img src="{{ 'moods-story-logo.png' | asset_img_url : "master" }}" class="lazyload" alt="moods-story-logo">
  </div>
  <div class="container">
    <div class="brand-story-text">
      <h4> {{ section.settings.heading }} </h4>
      {{ section.settings.info }}
    </div>
    <div class="brand-story-flex">
      <div class="brand-story-col">
        <img src="{{ section.settings.left_image | img_url : "master" }}" class="lazyload" alt="brand-story-img1">
      </div>
      <div class="brand-story-col">
        <img src="{{ section.settings.right_image | img_url : "master" }}" class="lazyload" alt="brand-story-img2">
      </div>
    </div>
    {% if section.settings.button_text != blank %}
    <a href="{{ section.settings.button_link }}" class="custom-site-btn custom-site-btn2">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>
{% schema %}
  {
    "name": "Brand Story",
    "settings": 
	[

		{
			"type" : "text",
			"id" : "heading",
			"label" : "Heading"
		},
		{
			"type" : "richtext",
			"id" : "info",
			"label" : "Description"
		},
		{
			"type" : "image_picker",
			"id" : "left_image",
			"label" : "Left Image"
		},
				{
			"type" : "image_picker",
			"id" : "right_image",
			"label" : "Right Image"
		},
		{
			"type" : "text",
			"id" : "button_text",
			"label" : "Button Text"
		},
		{
			"type" : "url",
			"id" : "button_link",
			"label" : "Link"
		}
	],
	"presets":
	[
		{
			"name" : "Brand Story",
			"category" : "Custom Sections"
		} 
	]
  }
{% endschema %}

