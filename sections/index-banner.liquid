<section class="home-banner lazyload" style="background-image: url('{{ section.settings.banner | img_url : "master" }}');">
  <div class="container">
    <div class="home-text">
      <div class="logo">
        <a href="{{ routes.root_url }}"><img src="{{ section.settings.logo | img_url : "master" }}" class="lazyload" alt="logo"></a>
      </div>
      <h4>{{ section.settings.heading }}</h4>
      {{ section.settings.info }}
      <div class="home-text-btns">
      <a href="#" class="custom-site-btn" data-bs-toggle="modal" data-bs-target="#subscribe-modal">Subscribe
        Now</a>
        <a href="#" class="custom-site-btn">About Us</a>
      </div>
    </div>
    <div class="scroll-down">
      <a href="#scroll-down">
        <span></span>
        <img src="{{ 'scroll.png' | asset_img_url : "master" }}" class="lazyload" alt="scroll">
      </a>
    </div>
  </div>
</section>
 
  

{% schema %}
  {
    "name": "Banner",
    "settings": 
	[
		{
			"type" : "image_picker",
			"id" : "logo",
			"label" : "Logo"
		},
		{
			"type" : "text",
			"id" : "heading",
			"label" : "Heading"
		},
		{
			"type" : "richtext",
			"id" : "info",
			"label" : "Description"
		},
		{
			"type" : "image_picker",
			"id" : "banner",
			"label" : "Banner"
		}
	],
	"presets":
	[
		{
			"name" : "Banner",
			"category" : "Custom Sections"
		} 
	]
  }
{% endschema %}

