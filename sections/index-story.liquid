<section class="story-teller">
  <div class="moods-story-logo">
    <img src="{{ 'moods-story-logo.png' | asset_img_url : "master" }}" class="lazyload" alt="moods-story-logo">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="story-teller-img">
          <img src="{{ section.settings.image | img_url : "master" }}" class="lazyload" alt="corky-girl">
        </div>
      </div>
      <div class="col-md-6">
        <div class="story-teller-text">
          <h4>{{ section.settings.heading }}</h4>
          <p>{{ section.settings.info_1 }}</p>
          {% comment %}
          {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="custom-site-btn custom-site-btn2 custom-site-btn3">{{ section.settings.button_text }}</a>
          {% endif %}
          {% endcomment %}
          {% assign formId = 'Contact_' | append : section.id %}
          {% form 'customer', id : formId %}
          {%- if form.posted_successfully? -%}
          <p class="form-message form-message--success" tabindex="-1" data-form-status>
            {{ 'general.newsletter_form.confirmation' | t }}
          </p>
          {%- endif -%}
          <input type="hidden" value="newsletter" name="contact[tags]" >
          <div class="input-container">
            <input type="text" placeholder="First Name" required="required" id="{{ formId }}-firstname" name="contact[first_name]" value="{% if form.first_name %}{{ form.first_name}}{% endif %}">
          </div>
          <div class="input-container">
            <input type="text" placeholder="Last Name" required="required" id="{{ formId }}-lastname" name="contact[last_name]" value="{% if form.last_name %}{{ form.last_name}}{% endif %}">
          </div>
          <div class="input-container">
            <input type="email" placeholder="Email Address" required="required" id="{{ formId }}-email" name="contact[email]" value="{% if form.email %}{{ form.email}}{% endif %}">
          </div>
          <input type="submit" value="Subscribe Now" class="custom-site-btn custom-site-btn2">
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
"name": "Story Teller",
"settings": 
[
{
"type" : "text",
"id" : "heading",
"label" : "Heading"
},
{
"type" : "textarea",
"id" : "info_1",
"label" : "Description"
},
{
"type" : "image_picker",
"id" : "image",
"label" : "Background Image"
},
{
"type" : "text",
"id" : "button_text",
"label" : "Button Text"
},
{
"type" : "url",
"id" : "button_link",
"label" : "Link"
}
],
"presets":
[
{
"name" : "Story Teller",
"category" : "Custom Sections"
} 
]
}
{% endschema %}

