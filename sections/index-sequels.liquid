<section class="made-for-sequels">
  <div class="moods-story-logo">
    <img src="{{ 'moods-story-logo.png' | asset_img_url : "master" }}" class="lazyload" alt="moods-story-logo">
  </div>
  <img src="{{ section.settings.image | img_url : "master" }}" class="lazyload" alt="made-for-sequels-img">
  <div class="container">
    <div class="made-for-sequels-text">
      <h4>{{ section.settings.heading }}</h4>
      <p>{{ section.settings.info_1 }}</p>
      <p>{{ section.settings.info_2 }}</p>
      {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="custom-site-btn custom-site-btn2">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Sequels",
    "settings": 
	[
		{
			"type" : "text",
			"id" : "heading",
			"label" : "Heading"
		},
		{
			"type" : "textarea",
			"id" : "info_1",
			"label" : "Description"
		},
		{
			"type" : "textarea",
			"id" : "info_2",
			"label" : "Description"
		},
		{
			"type" : "image_picker",
			"id" : "image",
			"label" : "Background Image"
		},
		{
			"type" : "text",
			"id" : "button_text",
			"label" : "Button Text"
		},
		{
			"type" : "url",
			"id" : "button_link",
			"label" : "Link"
		}
	],
	"presets":
	[
		{
			"name" : "Sequels",
			"category" : "Custom Sections"
		} 
	]
  }
{% endschema %}

