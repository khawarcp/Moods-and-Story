<section class="about-properties" style="background-image: url('{{ section.settings.back_image | img_url : 'master' }}');">
    {% for block in section.blocks %}
    <div class="about-properties-col">
        <div class="about-properties-img">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url : 'master' }}" class="lazyload" alt="about-properties-img1">
          {% endif %}
        </div>
        <div class="about-properties-text">
            <h5> {{ block.settings.heading }} </h5>
            <p>{{ block.settings.info }}</p>
        </div>
    </div>
    {% endfor %}
</section>
{% schema %}
{
    "name" : "Properties",
    "settings" :
    [
        {
            "type" : "image_picker",
            "id" : "back_image",
            "label" : "Background Image"
        }
    ],
    "blocks":
    [
        {
            "name" : "Property",
            "type" : "property",
            "limit" : 4,
            "settings" :
            [                
                {
                    "type" : "text",
                    "id" : "heading",
                    "label" : "Heading"
                },
                {
                    "type" : "textarea",
                    "id" : "info",
                    "label" : "Description"
                },
                {
                    "type" : "image_picker",
                    "id" : "image",
                    "label" : "Image"
                }
            ]
        }
    ],
    "presets" :
    [
        {
            "name" : "Properties",
            "category" : "Custom Sections"
        }  
    ]

}
{% endschema %}